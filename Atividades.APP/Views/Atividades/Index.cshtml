@using System.ComponentModel
@using Atividades.Domain.Enums
@using Atividades.Domain.Models
@model List<Atividade>

@{
    var atividades = Model ?? new List<Atividade>();
}

<div class="row">
    <h1>Atividades</h1> 
</div>
<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>TÃ­tulo</th>
                <th>Prioridade</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var atv in atividades)
            {
                var rowColor = "table-";
                switch (atv.Status)
                {
                    case EAtividade.EStatus.Aberta:
                        rowColor += "light";
                        break;
                    case EAtividade.EStatus.Concluida:
                        rowColor += "success";
                        break;
                }
                
                <tr class="@rowColor">
                    <td>@atv.Name</td>
                    <td>@atv.Prioridade</td>
                    <td>@atv.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>